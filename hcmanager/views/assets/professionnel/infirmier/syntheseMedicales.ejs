<div class="card-body">
  <a class="btn btn-success tooltip-test" title="Ajouter une synthèse" style="width: 40px; height: 40px;" href="#" data-bs-toggle="modal" data-bs-target="#addSyntModal"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus" viewBox="0 0 16 16">
    <path d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5z"/>
    <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z"/>
  </svg></a>
  <p class="card-text">
    <div class="container">
      <div class="col-lg">
        <div class="table-responsive">
          <table class="table">
              <thead>
                <tr>
                  <th scope="col">Date de synthèse</th>
                  <th scope="col">Responsable de la synthèse</th>
                  <th scope="col">Voir la synthèse</th>
                </tr>
              </thead>
              <tbody>
                  <% for(let i = 0; i < synt.length ; i++) {%>
                      <tr>
                          <td><%if(synt[i].dateDeSynthese.getDate()<10){%>0<%=synt[i].dateDeSynthese.getDate()%><%}else{%><%=synt[i].dateDeSynthese.getDate()%><% } %>-<%if(synt[i].dateDeSynthese.getMonth()+1<10){%>0<%=synt[i].dateDeSynthese.getMonth()+1%><%}else{%><%=synt[i].dateDeSynthese.getMonth()+1%><% } %>-<%=synt[i].dateDeSynthese.getFullYear()%></td>
                          <td><%= synt[i].nomInf%> <%= synt[i].prenomInf%></td>
                          <td><a class="btn btn-primary" style="width: 40px; height: 40px;" href="#" data-bs-toggle="modal" data-bs-target="#synt<%=synt[i].idSynthese%>Modal"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
                            <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                            <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
                          </svg></a></td>
                      </tr>
                  <% } %>
              </tbody>
            </table></div>
            
      </div>
  </div>
  </p>
  <% for(let i = 0; i < synt.length ; i++) {%>
    <!-- synt<%=synt[i].idSynthese%>Modal -->
    <div class="modal fade" id="synt<%=synt[i].idSynthese%>Modal" tabindex="-1" aria-labelledby="synt<%=synt[i].idSynthese%>ModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-xl">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="synt<%=synt[i].idSynthese%>ModalLabel">Synthèse médicale</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
                  <div class="modal-body container">
                    <div class="row">
                      <div class="col"><u>Poids</u> <%=synt[i].weight%> KG</div>
                      <div class="col"><u>Taille</u> <%=synt[i].height%> M</div>
                    </div>
                      <div class="row">
                        <div class="col border border-dark m-2">
                          <u>Allergies</u><br> <%=synt[i].alergies%>
                        </div>
                        <div class="col border border-dark m-2">
                          <u>Liste des problèmes</u><br> <%=synt[i].listeDesProblems%>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col border border-dark m-2">
                          <u>Liste de interventions chirugicales</u><br> <%=synt[i].listedDeInterventionsChirugicales%>
                        </div>
                        <div class="col border border-dark m-2">
                          <u>Histodrique de la prise médicamenteuse</u><br> <%=synt[i].histodriqueDeLaPriseMedicamenteuse%>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col border border-dark m-2">
                          <u>Implants</u><br> <%=synt[i].implants%>
                        </div>
                        <div class="col border border-dark m-2">
                          <u>Vaccinations</u><br> <%=synt[i].vaccinations%>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col border border-dark m-2">
                          <u>Résumé des examens pratiques</u><br> <%=synt[i].resumeDesExamensPratiques%>
                        </div>
                        <div class="col border border-dark m-2">
                          <u>Historique social</u><br> <%=synt[i].historiqueSocial%>
                        </div>
                      </div>
                  </div>
                  <div class="modal-footer">
                      <div class="text-muted" style="margin: auto;">cette synthèse creér le <%if(synt[i].dateDeSynthese.getDate()<10){%>0<%=synt[i].dateDeSynthese.getDate()%><%}else{%><%=synt[i].dateDeSynthese.getDate()%><% } %>-<%if(synt[i].dateDeSynthese.getMonth()+1<10){%>0<%=synt[i].dateDeSynthese.getMonth()+1%><%}else{%><%=synt[i].dateDeSynthese.getMonth()+1%><% } %>-<%=synt[i].dateDeSynthese.getFullYear()%> à partir de <%=synt[i].nomInf%> <%=synt[i].prenomInf%></div>
                  </div>
          </div>
      </div>
    </div>
    <% } %>
    <!-- addSyntModal -->
    <div class="modal fade" id="addSyntModal" tabindex="-1" aria-labelledby="addSyntModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-xl">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="addSyntModalLabel">Ajouter une synthèse médicale</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body container">
                <form action="/inf/patientFile/<%=idMalade%>/syntheseMedicales/addSynt" method="POST">
                  <div class="row">
                    <div class="col">
                      <label for="weight" class="form-label">Poids</label>
                      <input type="number" step="0.01" class="form-control" id="weight" name="weight" value="<%if(synt.length!=0){%><%=synt[0].weight%><% } %>">
                    </div>
                    <div class="col">
                      <label for="height" class="form-label">Taille</label>
                      <input type="number" step="0.01" class="form-control" id="height" name="height" value="<%if(synt.length!=0){%><%=synt[0].height%><% } %>">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <label for="alergies" class="form-label">Allergies</label>
                      <textarea class="form-control" id="alergies" name="alergies" rows="2"><%if(synt.length!=0){%><%=synt[0].alergies%><% } %></textarea>
                    </div>
                    <div class="col">
                      <label for="listeDesProblems" class="form-label">listeDesProblems</label>
                      <textarea class="form-control" id="listeDesProblems" name="listeDesProblems" rows="2"><%if(synt.length!=0){%><%=synt[0].listeDesProblems%><% } %></textarea>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <label for="listedDeInterventionsChirugicales" class="form-label">listedDeInterventionsChirugicales</label>
                      <textarea class="form-control" id="listedDeInterventionsChirugicales" name="listedDeInterventionsChirugicales" rows="2"><%if(synt.length!=0){%><%=synt[0].listedDeInterventionsChirugicales%><% } %></textarea>
                    </div>
                    <div class="col">
                      <label for="histodriqueDeLaPriseMedicamenteuse" class="form-label">histodriqueDeLaPriseMedicamenteuse</label>
                      <textarea class="form-control" id="histodriqueDeLaPriseMedicamenteuse" name="histodriqueDeLaPriseMedicamenteuse" rows="2"><%if(synt.length!=0){%><%=synt[0].histodriqueDeLaPriseMedicamenteuse%><% } %></textarea>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <label for="implants" class="form-label">implants</label>
                      <textarea class="form-control" id="implants" name="implants" rows="2"><%if(synt.length!=0){%><%=synt[0].implants%><% } %></textarea>
                    </div>
                    <div class="col">
                      <label for="vaccinations" class="form-label">vaccinations</label>
                      <textarea class="form-control" id="vaccinations" name="vaccinations" rows="2"><%if(synt.length!=0){%><%=synt[0].vaccinations%><% } %></textarea>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <label for="resumeDesExamensPratiques" class="form-label">resumeDesExamensPratiques</label>
                      <textarea class="form-control" id="resumeDesExamensPratiques" name="resumeDesExamensPratiques" rows="2"><%if(synt.length!=0){%><%=synt[0].resumeDesExamensPratiques%><% } %></textarea>
                    </div>
                    <div class="col">
                      <label for="historiqueSocial" class="form-label">historiqueSocial</label>
                      <textarea class="form-control" id="historiqueSocial" name="historiqueSocial" rows="2"><%if(synt.length!=0){%><%=synt[0].historiqueSocial%><% } %></textarea>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
              </div>
          </div>
      </div>
    </div>
</div>
<div class="card-footer text-muted">

</div>