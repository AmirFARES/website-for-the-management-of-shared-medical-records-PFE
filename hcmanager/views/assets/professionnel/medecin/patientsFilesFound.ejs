<body>
    <%- include('medecinHome'); -%>
    <div class="container">
        <div class="row" >
            <% for(let i = 0; i < rows.length ; i++) {%>
                <div class="col-lg-4">
                    <div class="card" style="width: 18rem; margin-top: 20px; height: 15rem;">
                        <div class="card-body">
                          <h5 class="card-title"><%= rows[i].nom +' ' +rows[i].prenom %></h5>
                          <h6 class="card-subtitle mb-2 text-muted">id : <%= rows[i].idMalade %></h6>
                          <p class="card-text">
                              <ul>
                                <li>Date de naissance :<br> <%=rows[i].dateDeNaissance.getDate() %>/
                                    <%=rows[i].dateDeNaissance.getMonth()+1 %>/
                                    <%=rows[i].dateDeNaissance.getFullYear() %></li>
                                <li>Sexe : <%=rows[i].sexe %></li>
                              </ul>
                          </p>
                          <a href="/medecin/patient/<%=rows[i].idMalade%>/donneesAdministratives" class="btn btn-outline-primary">Dossier</a>
                        </div>
                      </div>
                </div>
            <% } %>
        </div>
    </div>

        
