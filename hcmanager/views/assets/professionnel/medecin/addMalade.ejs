<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="dossier de malade form" />
  <meta name="author" content="" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="apple-touch-icon" sizes="180x180" href="/images/logo/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/images/logo/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/images/logo/favicon-16x16.png">
        <link rel="manifest" href="/images/logo/site.webmanifest">
  <title>Médecin</title>

</head>

<body>


  <%- include('medecinHome') -%>
  <div class="container" style="margin-top: 30px;">
    <form>
      <div class="row mt-2">
        <div class="col-lg">
          <input type="text" class="form-control" id="nom" name="nom" placeholder="Nom de malade">
        </div>
        <div class="col-lg">
          <input type="text" class="form-control" id="prenom" name="prenom" placeholder="Prénom de malade">
        </div>
      </div>
      <div class="row">
        <div class="col-lg">
          <label for="dateDeNaissance" class="form-label">Date de naissance</label><br>
          <input type="date" name="dateDeNaissance" placeholder="dd-mm-yyyy" value="" min="1900-01-01"
            max="2021-12-31">
        </div>
        <div class="col-lg">
          <label for="wilayaNaissance" class="form-label">Wilaya</label>
          <select name="wilayaNaissance" class="form-control">
            <% for(let i=0;i<wilayas.length;i++){ %>
                <% if(i==11){ %>
                    <option value="<%=wilayas[i].wilaya_code %>" selected>
                        <%=wilayas[i].wilayaFrName %>
                    </option>
                    <% }else{ %>
                        <option value="<%=wilayas[i].wilaya_code %>">
                            <%=wilayas[i].wilayaFrName %>
                        </option>
                        <% } %>
                            <% } %>
          </select>
        </div>
        <div class="col-lg">
          <label for="dairaNaissance" class="form-label">Daira de naissance</label>
          <input type="text" class="form-control" id="dairaNaissance" name="dairaNaissance">
        </div>
        <div class="col-lg">
          <label for="communeNaissance" class="form-label">Commune de naissance</label>
          <input type="text" class="form-control" id="communeNaissance" name="communeNaissance">
        </div>
      </div>
      <label class="form-label">Adresse domicile de malade</label>
      <div class="row">
        <div class="col-lg">
          
          <select name="wilayaDomicile" class="form-control">
            <% for(let i=0;i<wilayas.length;i++){ %>
                <% if(i==11){ %>
                    <option value="<%=wilayas[i].wilaya_code %>" selected>
                        <%=wilayas[i].wilayaFrName %>
                    </option>
                    <% }else{ %>
                        <option value="<%=wilayas[i].wilaya_code %>">
                            <%=wilayas[i].wilayaFrName %>
                        </option>
                        <% } %>
                            <% } %>
          </select>
        </div>
        <div class="col-lg">
          <input type="text" class="form-control" id="dairaDomicile" name="dairaDomicile" placeholder="Daira">
        </div>
        <div class="col-lg">
          <input type="text" class="form-control" id="communeDomicile" name="communeDomicile" placeholder="Commune">
        </div>
        <div class="col-lg">
          <input type="text" class="form-control" id="quartierDomicile" name="quartierDomicile"
            placeholder="Quartier">
        </div>
      </div>
      <div class="row">
        <div class="col-lg">
          <select class="form-select mt-2" aria-label="Default select example" name="sexe">
            <option value="M">masculin</option>
            <option value="F">féminin</option>
          </select>
        </div>
        

      </div>


      <div class="row mt-1">
        <div class="col-lg">
          <label class="form-label">Le(s) numéro(s) de téléphone</label>
          <div id="allNumFields">
            <div class="entry input-group mb-1">
              <button onclick="addNumField(c)" class="btn btn-primary style=" type="button"><svg
                  xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                  class="bi bi-telephone-plus-fill" viewBox="0 0 16 16">
                  <path fill-rule="evenodd"
                    d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511zM12.5 1a.5.5 0 0 1 .5.5V3h1.5a.5.5 0 0 1 0 1H13v1.5a.5.5 0 0 1-1 0V4h-1.5a.5.5 0 0 1 0-1H12V1.5a.5.5 0 0 1 .5-.5z" />
                </svg></button>
              </span>
            </div>
          </div>
          <small>Appuyez sur <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
              class="bi bi-telephone-plus-fill" viewBox="0 0 16 16">
              <path fill-rule="evenodd"
                d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511zM12.5 1a.5.5 0 0 1 .5.5V3h1.5a.5.5 0 0 1 0 1H13v1.5a.5.5 0 0 1-1 0V4h-1.5a.5.5 0 0 1 0-1H12V1.5a.5.5 0 0 1 .5-.5z" />
            </svg> pour ajouter un ou plusieurs numéros de téléphone</small>
        </div>
      </div>
      
      <div class="container">
        <div class="text-center">
          <button type="submit" class="btn btn-success" style="width: 40px; height: 40px;"
            formaction="/emergency/newPatient" formmethod="POST"><svg xmlns="http://www.w3.org/2000/svg" width="16"
              height="16" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
              <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
              <path fill-rule="evenodd"
                d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
            </svg></button>
        </div>
      </div>
    </form>
  </div>
</body>

<script>
let c=0;
function addNumField() {
  c++;
  let numField=document.createElement('div');
  numField.setAttribute('id',`numField${c}`);
  numField.setAttribute('class','entry input-group mb-1');
  let inputField=document.createElement('input');
  inputField.setAttribute('class','form-control');
  inputField.setAttribute('name','numPhone[]');
  inputField.setAttribute('type','text');
  let deleteBtn=document.createElement('button');
  deleteBtn.setAttribute('class','btn btn-danger ms-1');
  deleteBtn.setAttribute('type','button');
  deleteBtn.setAttribute('onclick',`deleteNumField(${c})`);
  deleteBtn.innerHTML=`<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-minus-fill" viewBox="0 0 16 16">
<path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511zM10 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5z"/>
</svg>`;
  document.getElementById("allNumFields").appendChild(numField);
  document.getElementById(`numField${c}`).appendChild(inputField);
  document.getElementById(`numField${c}`).appendChild(deleteBtn);
}

function deleteNumField(c){
  document.getElementById(`numField${c}`).remove();
}
</script>

</html>