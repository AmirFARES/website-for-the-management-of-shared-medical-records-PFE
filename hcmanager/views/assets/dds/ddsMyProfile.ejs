<body style="padding-top: 60px;">
  <div class="container rounded bg-light bg-gradient">
    <div class="row">
        <div class="col-md-7 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profil</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Nom</label><br><div class="text-muted"><%=myData[0].nom%></div></div>
                    <div class="col-md-6"><label class="labels">Prénom</label><br><div class="text-muted"><%=myData[0].prenom%></div></div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Wilaya</label><br><div class="text-muted"><%=myWilaya[0].wilayaFrName%></div></div>
                    <div class="col-md-6"><label class="labels">Numéro de téléphone</label><br><div class="text-muted">0<%=myData[0].numTelephone%></div></div>
                </div>
            </div>
        </div>
        <div class="col-md-5">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center experience"><span>Compte</span><a class="btn btn-success tooltip-test" title="Modifier les informations du profil" style="width: 40px; height: 40px;" href="#" data-bs-toggle="modal" data-bs-target="#editAccModal"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                    </svg></a></div><br>
                    <div class="col-md-6"><label class="labels">Email</label><br><div class="text-muted"><%=myData[0].email%></div></div>
                </div>
        </div>
    </div>
</div>
<!-- editAccModal -->
<div class="modal fade" id="editAccModal" tabindex="-1" aria-labelledby="editAccModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editAccModalLabel">Modifier les informations du profil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/dds/myProfile/editAcc" method="POST">
                <div class="modal-body">
                    <div class="container">
                        <div class="row mb-2">
                            <input type="tel" class="form-control" name="numTelephone" placeholder="numTelephone" id="numTelephone" value="<%=myData[0].numTelephone%>">
                        </div>
                        <div class="row mb-2">
                            <input type="email" class="form-control" name="email" placeholder="email" id="email" value="<%=myData[0].email%>">
                        </div>
                        <div class="row mb-2">
                            <input type="password" class="form-control" name="password" placeholder="Mot de passe" id="password">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        <button type="submit" class="btn btn-primary">Modifier</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
</body>

</html>